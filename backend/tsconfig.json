{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": false,
    "resolveJsonModule": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": false,
    "useDefineForClassFields": false
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/controllers/artistController.ts",
    "src/controllers/audioController.ts",
    "src/controllers/ragaController.ts",
    "src/controllers/trackController.ts",
    "src/controllers/transactionController.ts",
    "src/routes/artists.ts",
    "src/routes/audio.ts",
    "src/routes/ragas.ts",
    "src/routes/tracks.ts",
    "src/routes/transactions.ts",
    "src/models/Artist.ts",
    "src/models/Raga.ts",
    "src/models/Track.ts",
    "src/models/Transaction.ts",
    "src/services/youtubeService.ts",
    "src/services/audioMetadataService.ts",
    "src/services/gridfsService.ts",
    "src/scripts/generateRagas.ts",
    "src/scripts/generateRagasSimple.ts",
    "src/scripts/dataManager.ts",
    "src/scripts/seed.ts",
    "src/scripts/switchDB.ts",
    "src/index.ts",
    "src/models/User.ts",
    "src/models/Event.ts",
    "src/scripts/addSamplePastVisitData.ts",
    "src/scripts/addSamplePastVisitDataCloud.ts",
    "src/models-postgres/Patient.ts",
    "src/models-postgres/Appointment.ts",
    "src/models-postgres/AppointmentWorkflowLog.ts",
    "src/services/geminiAIService.ts",
    "src/services/otpService.ts",
    "src/models/User.ts",
    "src/models/Event.ts",
    "src/__tests__/**/*",
    "src/models-postgres/VitalParameter.ts",
    "src/models-postgres/VitalParameterDefinition.ts"
  ]
}
